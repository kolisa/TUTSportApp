<Project>
    <PropertyGroup>
        <_RepositoryBuildTargetsImported>true</_RepositoryBuildTargetsImported>

        <!-- The path to the common.props file.  This is where each module should specify their default values. -->
        <_CommonTargetsFile>$(RepositoryRootDirectory)build\common.targets</_CommonTargetsFile>
    </PropertyGroup>

    <Import Project="$(_CommonTargetsFile)" Condition="'$(LegacyWebApp)' != 'true' and '$(_CommonTargetsFile)' != 'true' and Exists('$(_CommonTargetsFile)')" />

    <!-- Remove the Manifest File from all projects. -->
    <ItemGroup>
        <None Remove="**/.manifest" />
    </ItemGroup>

</Project>
